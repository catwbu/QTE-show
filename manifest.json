{
  "manifest_version": 3,
  "name": "QTE 反應挑戰",
  "version": "2.0",
  "description": "一個結合 QTE 挑戰的網站封鎖工具與反應訓練器。",
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["qte_trigger.html", "qte_trigger.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
